doctype html
head
    link(href='/static/css/styles.css',rel='stylesheet')
    script(src='/js/lib/jquery-2.1.0.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/lib/angular.min.js')
    script(src='/js/todo/todoApp.js')
body(ng-app='todoList',ng-controller='todoCtrl')
    .container.todo
        div
            .row
                .col-md-8.col-sm-7.col-xs-12.topTitleRegion
                    span.titleIcon.glyphicon.glyphicon-list-alt
                    h2 TODO 
                .col-md-4.col-sm-5.col-xs-12
                    button.marginTop20.btn.btn-primary(data-toggle='modal',data-target='#myModal') New Todo                
            hr
            .row
                .col-md-12(ng-repeat='todo in todos',todo-is-checked='{{todo.finished}}')
                        p.todoContent.col-md-7.col-sm-6.col-xs-12 {{todo.content}}
                        div.col-md-5.col-sm-6.col-xs-12
                            .col-md-6.col-sm-6.col-xs-6
                                span.badge Start at: {{todo.uploadTime}}
                            .col-md-6.col-sm-6.col-xs-6.text-right
                                button.checkoutBtn.btn.btn-primary(ng-click='checkoutTodo($event)',data-todoId='{{todo.id}}',type='button') Check
                        hr.col-md-12.col-sm-12.col-xs-12
                        
            .row
                #myModal.modal.fade(ng-controller='submitTodo',tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                    .modal-dialog
                        .modal-content
                            .modal-header
                                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                                h4#myModalLabel.modal-title 发表新话题
                            .modal-body
                                label.control-label 内容
                                textarea.form-control(ng-model='content',rows='7')
                                label.control-label.displayNone
                            .modal-footer
                                button.btn.btn-default(type='button', data-dismiss='modal') 关闭
                                button.btn.btn-primary(ng-click='submitTodo()',type='button') 保存